# Application
APP_NAME=Domus
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=sqlite+aiosqlite:///./domus.db

# Google OAuth (for user authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/callback

# Gemini API (for vision processing)
GEMINI_API_KEY=your-gemini-api-key

# Redis (optional - falls back to in-memory if not available)
REDIS_URL=redis://localhost:6379

# IoT Device Token (for fridge camera authentication)
IOT_DEVICE_TOKEN=mock-iot-device-token

# Image Storage
IMAGE_STORAGE_PATH=./storage/images
IMAGE_RETENTION_DAYS=30

# Notification Settings
NOTIFICATION_LOG_PATH=./logs/notifications.log
ALEXA_LOG_PATH=./logs/alexa.log

# Debounce Settings (in seconds)
IOT_IMAGE_DEBOUNCE_SECONDS=900
EXPIRY_NOTIFICATION_THROTTLE_SECONDS=86400

# Server
HOST=0.0.0.0
PORT=8000
